{
  "name": "@data-story/ui",
  "version": "0.0.78",
  "main": "./dist/bundle.js",
  "types": "./dist/src/index.d.ts",
  "exports": {
    "./data-story.css": "./dist/data-story.css",
    ".": {
      "import": "./dist/bundle.js",
      "require": "./dist/bundle.js",
      "default": "./dist/bundle.js",
      "types": "./dist/src/index.d.ts"
    }
  },
  "type": "commonjs",
  "files": [
    "/dist"
  ],
  "scripts": {
    "analyze": "webpack --profile --json > stats.json && yarn run -T webpack-bundle-analyzer stats.json",
    "build": "echo _____RUNNING_UI_BUILD_____ && webpack && yarn run build:css",
    "build:css": "yarn run -T postcss ./src/styles/globals.css -o ./dist/data-story.css",
    "watch:css": "yarn run build:css --watch",
    "watch:webpack": "webpack --watch",
    "release": "yarn run -T release-it",
    "ci:unit": "yarn run -T vitest run --config vitest.config.ts --coverage --passWithNoTests",
    "test:unit": "yarn run -T vitest --config vitest.config.ts --coverage --passWithNoTests",
    "test:component": "yarn run -T cypress run --project ../../ ../../cypress.config.ts --component --spec 'src/**/*.cy.tsx'",
    "test": "yarn run ci:unit && yarn run test:component"
  },
  "release-it": {
    "git": false,
    "skipChecks": true,
    "npm": {
      "publish": false,
      "skipChecks": true,
      "versionArgs": [
        "--workspaces-update=false"
      ]
    }
  },
  "dependencies": {
    "@data-story/core": "workspace:*",
    "clsx": "^2.0.0",
    "concurrently": "^8.2.1",
    "markdown-it": "^13.0.2",
    "reactflow": "^11.8.1",
    "zustand": "^4.3.9"
  },
  "devDependencies": {
    "@tailwindcss/typography": "^0.5.10",
    "@types/glob": "^8.1.0",
    "@types/markdown-it": "^13.0.6",
    "@types/node": "18.14.2",
    "@types/react": "*",
    "@types/react-dom": "*",
    "@types/ws": "^8.5.4",
    "autoprefixer": "^10.4.13",
    "axios": "^1.3.4",
    "css-loader": "^6.8.1",
    "postcss": "^8.4.21",
    "postcss-loader": "^7.3.3",
    "react-hook-form": "^7.43.8",
    "style-loader": "^3.3.3",
    "tailwindcss": "^3.2.7",
    "ts-node": "^10.9.1",
    "typescript": "4.9.5",
    "webpack": "^5.88.1",
    "webpack-cli": "^5.1.4",
    "ws": "^8.12.1"
  },
  "peerDependencies": {
    "react": "^18.2.0",
    "react-dom": "^18.2.0"
  }
}
