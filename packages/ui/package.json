{
  "name": "@data-story/ui",
  "version": "0.0.109",
  "type": "commonjs",
  "main": "./dist/bundle.cjs",
  "module": "./dist/bundle.mjs",
  "exports": {
    "./data-story.css": "./dist/data-story.css",
    ".": {
      "types": "./src/index.ts",
      "import": "./dist/bundle.mjs",
      "require": "./dist/bundle.cjs",
      "default": "./dist/bundle.mjs"
    }
  },
  "files": [
    "/dist",
    "/src"
  ],
  "scripts": {
    "analyze": "yarn run -T webpack --profile --json > stats.json && yarn run -T webpack-bundle-analyzer stats.json",
    "build": "echo _____RUNNING_UI_BUILD_____ && yarn run -T webpack && yarn run build:css",
    "build:css": "postcss ./src/styles/globals.css -o ./dist/data-story.css",
    "watch:css": "yarn run build:css --watch",
    "watch:webpack": "yarn run -T webpack --watch",
    "release": "yarn run -T release-it",
    "ci:unit": "yarn run -T vitest run --config vitest.config.ts --passWithNoTests",
    "test": "yarn run ci:unit && yarn run test:component",
    "test:unit": "yarn run -T vitest --config vitest.config.ts --passWithNoTests",
    "test:component": "yarn run -T cypress run --project ../../ ../../cypress.config.ts --component --spec 'src/**/*.cy.tsx'",
    "tinker": "npx ts-node ./src/tinker.ts"
  },
  "release-it": {
    "git": false,
    "skipChecks": true,
    "npm": {
      "publish": false,
      "skipChecks": true,
      "versionArgs": [
        "--workspaces-update=false"
      ]
    }
  },
  "dependencies": {
    "@codemirror/autocomplete": "^6.16.2",
    "@codemirror/lang-javascript": "^6.2.3",
    "@codemirror/lang-json": "^6.0.1",
    "@codemirror/view": "^6.36.5",
    "@data-story/core": "workspace:*",
    "@floating-ui/react": "^0.26.10",
    "@tanstack/react-table": "^8.11.7",
    "@tanstack/react-virtual": "^3.5.0",
    "@uiw/react-codemirror": "patch:@uiw/react-codemirror@npm%3A4.23.10#~/.yarn/patches/@uiw-react-codemirror-npm-4.23.10-2db625ca86.patch",
    "@xyflow/react": "12.5.5",
    "ahooks": "^3.7.10",
    "allotment": "^1.20.2",
    "clsx": "^2.0.0",
    "markdown-it": "^13.0.2",
    "react-dnd": "^16.0.1",
    "react-dnd-html5-backend": "^16.0.1",
    "react-hook-form": "^7.43.8",
    "rxjs": "^7.8.1",
    "zustand": "^4.3.9"
  },
  "devDependencies": {
    "@tailwindcss/typography": "^0.5.10",
    "@types/markdown-it": "^13.0.6",
    "@types/react": "^18",
    "@types/react-dom": "*",
    "@types/ws": "^8.5.4",
    "autoprefixer": "^10.4.13",
    "css-loader": "^6.8.1",
    "postcss": "^8.4.21",
    "postcss-cli": "^11.0.0",
    "postcss-loader": "^7.3.3",
    "style-loader": "^3.3.3",
    "tailwindcss": "^3.2.7"
  },
  "peerDependencies": {
    "react": "^18.2.0",
    "react-dom": "^18.2.0"
  }
}
