{
  "name": "data-story",
  "private": true,
  "workspaces": [
    "packages/core",
    "packages/ui",
    "packages/docs",
    "packages/nodejs",
    "packages/hjson",
    "packages/openai",
    "packages/hubspot",
    "packages/desktop",
    "packages/private/*"
  ],
  "scripts": {
    "dev": "echo _____RUNNING_ROOT_DEV_____ && yarn kill && turbo dev --parallel",
    "dev:desktop": "turbo dev:desktop --parallel",
    "kill": "kill-port 3000 3100",
    "build": "turbo build",
    "docs:add-nodes": "npx ts-node ./scripts/addNodesToDocs.ts",
    "lint": "eslint .",
    "postinstall": "[ \"$CI\" = \"true\" ] || husky install",
    "release-core": "yarn workspace @data-story/core run release && yarn release-ui && yarn release-nodejs",
    "release-ui": "yarn workspace @data-story/ui run release",
    "release-nodejs": "yarn workspace @data-story/nodejs run release",
    "ci:test": "turbo test --filter=@data-story/core --filter=@data-story/ui --filter=@data-story/docs && yarn ci:e2e",
    "ci:e2e": "start-server-and-test 'yarn dev' 3000 'yarn cy:e2e'",
    "cy:e2e": "cypress run ./cypress.config.ts --spec 'cypress/e2e/**/*'",
    "cy:open": "cypress open"
  },
  "release-it": {
    "increment": false,
    "git": {
      "requireCleanWorkingDir": false,
      "tag": false,
      "push": false
    },
    "github": {
      "release": false
    },
    "npm": {
      "publish": false,
      "skipChecks": true,
      "versionArgs": [
        "--workspaces-update=false"
      ]
    }
  },
  "lint-staged": {
    "*.{js,jsx,tsx,ts}": "eslint"
  },
  "version": "0.0.1",
  "packageManager": "yarn@4.0.2",
  "devDependencies": {
    "@stylistic/eslint-plugin": "^0.1.2",
    "@types/mocha": "^10.0.6",
    "@typescript-eslint/parser": "^6.9.0",
    "@vitest/coverage-c8": "^0.29.7",
    "cypress": "^13.6.1",
    "eslint": "^8.52.0",
    "eslint-plugin-import": "^2.25.0",
    "eslint-plugin-react-hooks": "^4.6.0",
    "husky": "^8.0.0",
    "kill-port": "^2.0.1",
    "lint-staged": "^15.0.2",
    "postcss-cli": "^11.0.0",
    "release-it": "^17.0.0",
    "start-server-and-test": "^2.0.3",
    "ts-loader": "^9.5.1",
    "turbo": "<1.11.0",
    "vitest": "^0.29.2",
    "webpack-bundle-analyzer": "^4.10.1"
  }
}
