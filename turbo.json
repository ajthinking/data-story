{
  "$schema": "https://turbo.build/schema.json",
  "pipeline": {
    "dev": {
      "dependsOn": [
        "watch:webpack",
        "watch",
        "watch:css"
      ],
      "cache": false,
      "persistent": true
    },
    "ext:dev": {
      "dependsOn": [
        "watch:extension", 
        "watch:app", 
        "watch"
      ],
      "cache": false,
      "persistent": true
    },
    "watch:extension": {
      "cache": false,
      "persistent": true
    },
    "watch:app": {
      "cache": false,
      "persistent": true
    },
    "watch": {
      "cache": false,
      "persistent": true
    },
    "watch:webpack": {
      "cache": false,
      "persistent": true
    },
    "watch:css": {
      "cache": false,
      "persistent": true
    },
    "watch:server": {
      "cache": false,
      "persistent": true
    },
    "build": {
      "dependsOn": ["^build"],
      "outputs": ["dist"],
      "cache": true
    },
    "lint": {},
    "test": {
      "cache": true,
      "dependsOn": ["build"]
    }
  }
}
