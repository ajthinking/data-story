{
  "$schema": "https://turbo.build/schema.json",
  "pipeline": {
    "dev": {
      "dependsOn": [
        "watch:webpack",
        "watch:tsc",
        "watch:css",
        "build"
      ],
      "cache": false,
      "persistent": true
    },
    "watch:tsc": {
      "cache": false,
      "persistent": true
    },
    "watch:webpack": {
      "cache": false,
      "persistent": true
    },
    "watch:css": {
      "cache": false,
      "persistent": true
    },
    "build": {
      "dependsOn": ["^build"],
      "outputs": ["dist"],
      "cache": true
    },
    "lint": {},
    "test": {
      "cache": true,
      "dependsOn": ["build"]
    }
  }
}
